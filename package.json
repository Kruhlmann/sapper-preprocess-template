{
    "name": "wert-frontend",
    "description": "Frontend component of the Wert platform",
    "version": "0.0.1",
    "scripts": {
        "dev": "sapper dev --src src/core --routes src/routes",
        "build": "sapper build --src src/core --routes src/routes",
        "doc": "typedoc --out doc/ --mode modules src/typescript/",
        "start": "node __sapper__/build",
        "cy:run": "cypress run",
        "cy:open": "cypress open",
        "lint": "./node_modules/.bin/eslint -c .eslintrc.js src/**/*.js src/**/*.js src/**/*.svelte --ignore-pattern src/core/",
        "test": "run-p --race dev cy:run"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^4.0.3",
        "@types/node": "^14.0.5",
        "@typescript-eslint/parser": "^3.0.1",
        "autoprefixer": "^9.8.0",
        "cypress": "^4.6.0",
        "eslint": "^7.1.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "node-sass": "^4.14.1",
        "postcss-fakeid": "^1.0.2",
        "postcss-import": "^12.0.1",
        "postcss-url": "^8.0.0",
        "postcss-zindex": "^4.0.1",
        "pug": "^3.0.0",
        "rollup": "^2.10.9",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-svelte": "^5.2.2",
        "rollup-plugin-terser": "^6.1.0",
        "svelte": "^3.22.3",
        "svelte-preprocess": "^3.7.4",
        "typescript": "^3.9.3"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "npm-run-all": "^4.1.5",
        "polka": "^0.5.2",
        "sapper": "^0.27.13",
        "sirv": "^0.4.6"
    }
}
